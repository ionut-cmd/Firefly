
<%= simple_form_for([@forum, @forum.comments.build]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs", style="background: transparent">
    <%= f.input :comment %>
  </div>

  <div class="form-actions">
    <button type="button" class="btn btn-danger"><%= f.button :submit %></button>
  </div>
<% end %>
