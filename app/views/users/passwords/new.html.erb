<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<div class="background">
  <div class="container">
    <div class="screen">
      <div class="screen-body">
        <div class="screen-body-item left">
          <div class="app-title">
            <span style="color:yellow">Forgot your password?</span>
          </div>
        </div>
        <div class="screen-body-item">
          <div class="app-form">
            <div class="app-form-group">
             <%= f.label :email,class: "app-subhead"  %><br /><%= f.email_field :email,class: "form-control",placeholder: "Email", autofocus: true, autocomplete: "email" %>
            </div>
              <button class="app-form-button" ><div class="actions"><%= f.submit "RESET PASSWORD", class:"app-form-button" %></div></button>
              <% end %>
              <button class="app-form-button"><%= button_to "LOGIN", new_user_session_path, method: :get, class:"app-form-button"%></button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
