        <% if user_signed_in? %>
            <button class="join-button" type="submit" >
            <li2><%= link_to "Profile", edit_user_registration_path %></li2>
            </button>
            <button class="join-button" type="submit" >
            <li2><%= link_to "Sign-Out", destroy_user_session_path, method: "delete" %></li2>
